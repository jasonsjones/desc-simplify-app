{
    "root": true,
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": ["react"],
    "settings": {
        "react": {
            "version": "16.5"
        }
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "rules": {
        "react/prop-types": "off",
        "no-console": "off",
        "semi": "warn",
        "curly": "warn",
        "eqeqeq": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "no-multi-spaces": "warn",
        "no-tabs": "error",
        "no-trailing-spaces": "error",
        "wrap-iife": "warn"
    }
}
